{
    "name": "Dev Extension",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["myStyles.css"],
          "js": ["contentScript.js"]
        }
      ],
      "browser_action": {
        "default_popup": "popup.html"
      },
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "web_accessible_resources": [
        "images/*.jpg",
        "images/*.jpeg"
    ],
    "permissions": [
      "tabs"
  ]
  }