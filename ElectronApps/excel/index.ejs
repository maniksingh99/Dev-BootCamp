<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title><%=title%></title>
</head>
<body>
        <!-- .menu+.menu-option+(.formulaBar>(input[type="text"])*2).cell-container+.sheets -->
        <div class="menu-container">
            <div class="menu" id="File">File</div>
            <div class="menu" id="Home">Home</div>
        </div>
        <div class="menu-option-container">
            <div class="menu-options" id="File-menu-options">
                <div id="New">New</div>
                <div id="Open">Open</div>
                <div id="Save">Save</div>
            </div>
            <div class="menu-options" id="Home-menu-options">
                <div class="menu-group">
                    <div class="menu-row">
                        <select name="" id="font-family">
                            <option value="Arial">Arial</option>
                            <option value="Cambria">Cambria</option>
                            <option value="Georgia">Georgia</option>
                            <option value="monospace">MonoSpace</option>
                            <option value="sans-serif">sans-serif</option>
                        </select>
                        <select name="" id="font-size">
                            <option value="10">10</option>
                            <option value="12">12</option>
                            <option value="14">14</option>
                            <option value="16">16</option>
                            <option value="18">18</option>
                            <option value="22">22</option>
                        </select>
                    </div>
                    <div class="menu-row">
                        <input type="button" id="bold" value="B">
                        <input type="button" id="underline" value="U">
                        <input type="button" id="italic" value="I">
                        <input type="color" id="bg-color" value="rebeccapurple">
                        <input type="color" id="text-color" value="gray">
                    </div>
                </div>
                <div class="menu-group">
                    <input type="button" value="L" halign="left">
                    <input type="button" value="C" halign="center">
                    <input type="button" value="R" halign="right">
                </div>
            </div>
            
        </div>
        
        <div class="formulaBar">Formula bar
            <input type="text" id="text-input" class="text-container ib" readonly="true">
            <input type="text" id="formula-input" class="formula-container">
        </div>
        <div class="cell-container">
            <div id="top-left-cell"></div>
            <div id="top-row">
                <%for(let i=0;i<cols;i++){%>
                    <div class="cell">
                        <%=String.fromCharCode(i+65)%>
                    </div>
                    <%}%>
            </div>
            <div id="left-col">
                <%for(let j=1;j<=rows;j++){%>
                    <div class="cell">
                        <%=j%>
                    </div>
                    <%}%>
            </div>
            <div id="grid">
                <%for(let i=0;i<rows;i++){%>
                    <div class="row">
                        <%for(let j=0;j<cols;j++){%>
                            <div class="cell" contenteditable="true" row-id=<%=i%> col-id=<%=j%>></div>
                            <%}%>
                    </div>
                    <%}%>
            </div>
        </div>
        <!-- <div class="cell-container">
            <%for(let i=1;i<=rows;i++){%>
                <div class="row">
                    <%for(let j=0;j<cols;j++){%>
                        <div class="col" contenteditable="true">
                            <%=`${i} - ${String.fromCharCode(65+j)}`%>
                        </div>
                    <%}%>
                </div>
            <%}%>    
        </div> -->
        <div class="sheets">Sheets</div>
        <script src="script.js"></script>
</body>
</html>